<% if tag_id = ENV.fetch("UMAMI_ANALYTICS", nil) %>
  <script async defer data-website-id="<%= tag_id %>" src="<%= ENV.fetch("UMAMI_URL", nil) %>"></script>
<% end %>

<% if defined?(current_component) && current_component.present? %>
  <%= content_for :participatory_space_actions do %>
    <%= cell("decidim/follow_button", current_component, button_classes: "button button__sm button__transparent") %>
  <% end %>

  <%= content_for :participatory_space_mobile_actions do %>
    <%= cell("decidim/follow_button", current_component, button_classes: "button button__sm button__transparent", mobile: true) %>
  <% end %>
<% end %>
