<section id="partner-logos" class="extended home__section partner-logos text-black">
  <div class="home__section-header">
    <h2 class="home__section-title"><%= I18n.t('decidim.content_blocks.partner_logos.members') %></h2>
  </div>
  <div class="grid grid-cols-2 lg:grid-cols-3 gap-4 p-4">
    <% load_partners['members'].each do |partner| %>
      <div class="flex items-center justify-center h-full p-2 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <%= link_to partner['url'], target: '_blank', class: "flex items-center justify-center w-full h-full" do %>
          <%= image_tag partner['image'], 
            alt: partner['name'], 
            loading: 'lazy',
            :class => "object-contain max-h-24 w-full grayscale" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="home__section-header mt-8">
    <h2 class="home__section-title"><%= I18n.t('decidim.content_blocks.partner_logos.associated_partners') %></h2>
  </div>
  <div class="grid grid-cols-2 lg:grid-cols-3 gap-4 p-4">
    <% load_partners['associated_partners'].each do |partner| %>
      <div class="flex items-center justify-center h-full p-2 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <%= link_to partner['url'], target: '_blank', class: "flex items-center justify-center w-full h-full" do %>
          <%= image_tag partner['image'], 
              alt: partner['name'], 
              loading: 'lazy',
              class: "object-contain max-h-24 w-full grayscale" %>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
